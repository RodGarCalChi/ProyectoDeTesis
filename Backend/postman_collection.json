          "name": "Acceso con Token de Admin (DEBE FALLAR)",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "// Simular token de admin (ID 1)",
                  "pm.collectionVariables.set('adminToken', 'token_1_' + Date.now());"
                ]
              }
            }
